{
  "manifest_version": 3,
  "name": "Time Schedule - New Tab Organizer",
  "description": "Automatically shows your daily schedule or to-do list every time you open a new tab. Stay organized and productive!",
  "version": "1.1.0",
  "chrome_url_overrides": {
    "newtab": "newtab.html"
  },
  "permissions": [
    "storage",
    "notifications",
    "alarms"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "Time Schedule"
  },
  "icons": {
    "16": "image.png",
    "48": "image.png",
    "128": "image.png"
  }
}